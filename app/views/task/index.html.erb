<h1>My task</h1>

<% @tasks.each do |task| %>
  <div>
    <input type="checkbox" <%= task.completed ? 'checked' : '' %> />
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to(task_path(task), data: { turbo_method: :delete, turbo_confirm: "Do you really want to delete this task?" }) do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
<% end %>

<%= link_to(tasks_new_path, class: 'btn-btn-link d-block mt-3') do %>
  <i class="fa-solid fa-plus"></i> Add a new task
<% end %>
