<div class="d-flex justify-content-between align-items-center">
  <h1 class="mb-3"><%= @task.title %></h1>
  <%= link_to "Edit this task", task_edit_path(@task), class: 'btn btn-secondary' %>
</div>

<blockquote class="bg-light p-3 border my-4 blockquote"><%= @task.details %></blockquote>

<div class="form-check">
  <input type="checkbox" class="form-check-input" <%= @task.completed ? 'checked' : '' %> />
  <label class="form-check-label" for="completed"><%= @task.completed ? 'This task is completed' : 'This task is not completed yet' %></label>
</div>

<%= link_to(tasks_path, class: 'btn-btn-link d-block mt-3') do %>
  <i class="fa-solid fa-rotate-left"></i> Back to list
<% end %>
